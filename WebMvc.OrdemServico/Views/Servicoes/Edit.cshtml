@model WebMvc.OrdemServico.Models.Servico

@{
    ViewData["Title"] = "Editar serviço";
}
<h6 id="titulo">@ViewData["Title"] Código @Html.DisplayFor(model => model.Id)</h6>

<div id="espacador">
    <form asp-action="Edit" autocomplete="off" >
        <input type="hidden" asp-for="Id" />
        <h6 id="divisor">Dados do serviço</h6>
        <div class="form-group">
            <label id="espacador">Serviço <input autofocus asp-for="NomeServico" /></label>
            <label id="espacador">Preço <input asp-for="Preco" data-val=false /></label>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-warning">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
